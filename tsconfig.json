{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": false,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "lib": ["es2015"],
  "include": ["index.ts", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
